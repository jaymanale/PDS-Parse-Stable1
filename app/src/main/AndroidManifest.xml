<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.PDS.readme"
    android:versionCode="3"
    android:versionName="1.0.2" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS" />


    <application
        android:name="com.PDS.stackbase.ParseWorkshopApplication"

        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.PDS.stackbase.AuthenticateActivity"
            android:label="@string/app_name"
            android:configChanges="orientation"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.PDS.stackbase.AllocationStatus"
            android:label="Status"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.PDS.stackbase.MainFeedActivity"
            android:label="@string/app_name"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.PDS.stackbase.SelectUsersActivity"
            android:label="@string/title_activity_select_users"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.PDS.stackbase.Dashboard"
            android:label="@string/vendordash"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.PDS.stackbase.AddLinkActivity"
            android:label="@string/title_activity_add_link"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name="com.PDS.stackbase.Retrieve_data"
            android:label="@string/user_information"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.PDS.stackbase.AllocationFair"
            android:label="Allocation &amp; Fair"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>